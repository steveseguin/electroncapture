{
  "name": "VDON.Electron.Capture.App",
  "version": "2.23.1",
  "description": "A simple tool to aid with frameless window video capture and VDO.Ninja publishing",
  "author": "Steve Seguin <steve@seguin.email>",
  "main": "main.js",
  "scripts": {
    "prestart": "node ./scripts/install-window-audio-capture.js && node ./scripts/install-electron-asio.js",
    "start": "electron .",
    "build": "run-os",
    "prebuild": "node ./scripts/install-window-audio-capture.js && node ./scripts/install-electron-asio.js",
    "build:win32": "electron-builder --win",
    "prebuild:win32": "node ./scripts/install-window-audio-capture.js && node ./scripts/install-electron-asio.js",
    "build:darwin": "electron-builder --mac --universal --config.electronVersion=39.2.7 --config.electronDownload.mirror=https://github.com/electron/electron/releases/download/ --config.electronDownload.customDir=v39.2.7",
    "prebuild:darwin": "node ./scripts/install-window-audio-capture.js",
    "build:linux": "electron-builder --linux --config.electronVersion=39.2.7 --config.electronDownload.mirror=https://github.com/electron/electron/releases/download/ --config.electronDownload.customDir=v39.2.7",
    "prebuild:linux": "node ./scripts/install-window-audio-capture.js",
    "build:rpideb": "USE_SYSTEM_FPM=true electron-builder --armv7l --linux deb",
    "prebuild:rpideb": "node ./scripts/install-window-audio-capture.js",
    "build:rpi": "electron-builder --armv7l --linux  AppImage",
    "prebuild:rpi": "node ./scripts/install-window-audio-capture.js",
    "build:arm64": "electron-builder --arm64 --linux deb rpm AppImage",
    "prebuild:arm64": "node ./scripts/install-window-audio-capture.js",
    "clean": "rimraf ./dist",
    "release": "electron-builder --publish always",
    "native-modules:rebuild": "node ./scripts/install-window-audio-capture.js --force && node ./scripts/install-electron-asio.js --force",
    "postinstall": "node ./scripts/install-custom-electron.js && node ./scripts/install-window-audio-capture.js && node ./scripts/install-electron-asio.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/steveseguin/electroncapture.git"
  },
  "build": {
    "appId": "capture.electron",
    "productName": "elecap",
    "electronVersion": "39.2.13-qp20",
    "npmRebuild": false,
    "electronDownload": {
      "mirror": "https://github.com/steveseguin/electron/releases/download/",
      "customDir": "v39.2.13-qp20"
    },
    "protocols": {
      "name": "electroncapture",
      "schemes": [
        "electroncapture"
      ]
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "**/*",
          "!.DS_Store",
          "!.git",
          "!.git/**",
          "!.github",
          "!.github/**",
          "!.gitignore",
          "!.gitmodules",
          "!.last_enhance_run",
          "!.npmrc",
          "!_config.yml",
          "!BENEFITS.md",
          "!CNAME",
          "!PRIVACY.md",
          "!README.md",
          "!afterPack.js",
          "!afterPackHook.js",
          "!afterSign.js",
          "!ci.yml",
          "!dist",
          "!dist/**",
          "!example.jpg",
          "!forcekill.bat",
          "!installer.nsh",
          "!main_old.js",
          "!npx",
          "!native-modules",
          "!native-modules/**",
          "!scripts",
          "!scripts/**",
          "!setFuses.js",
          "!test-window-reuse.html",
          "!test.css",
          "!test.js",
          "!testFuses.js",
          "!electron-asio-src",
          "!electron-asio-src/**"
        ]
      },
      {
        "from": "native-modules/window-audio-capture",
        "to": "native-modules/window-audio-capture",
        "filter": [
          "index.js",
          "package.json",
          "LICENSE.txt"
        ]
      },
      {
        "from": "native-modules/window-audio-capture/build/Release",
        "to": "native-modules/window-audio-capture/build/Release",
        "filter": [
          "window_audio_capture.node"
        ]
      },
      {
        "from": "native-modules/electron-asio",
        "to": "native-modules/electron-asio",
        "filter": [
          "index.js",
          "package.json"
        ]
      },
      {
        "from": "native-modules/electron-asio/build/Release",
        "to": "native-modules/electron-asio/build/Release",
        "filter": [
          "electron_asio.node",
          "portaudio_x64.dll"
        ]
      }
    ],
    "mac": {
      "category": "public.build.automation",
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "This app requires camera access to record video.",
        "NSMicrophoneUsageDescription": "This app requires microphone access to record audio."
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "elecap-${version}.${ext}",
      "writeUpdateInfo": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "linux": {
      "category": "public.build.automation",
      "icon": "assets/icons/png/256x256.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "executableName": "elecap",
      "synopsis": "Video Capture Tool",
      "description": "A simple tool for frameless window video capture",
      "desktop": {
        "entry": {
          "Name": "EleCap",
          "Comment": "Video Capture Tool",
          "Categories": "Utility;"
        }
      }
    },
    "nsis": {
      "runAfterFinish": true,
      "installerIcon": "assets/icons/win/icon.ico",
      "artifactName": "elecap-${version}.${ext}",
      "differentialPackage": false,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "include": "installer.nsh"
    },
    "portable": {
      "artifactName": "elecap.exe",
      "requestExecutionLevel": "user",
      "unpackDirName": true
    },
    "appx": {
      "applicationId": "elecap",
      "backgroundColor": "#464646",
      "identityName": "elecap",
      "publisherDisplayName": "Steve Seguin",
      "artifactName": "elecap-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "afterSign": "./afterSign.js",
    "afterPack": "./afterPackHook.js",
    "afterAllArtifactBuild": "./afterPack.js"
  },
  "devDependencies": {
    "@electron/fuses": "^2.0.0",
    "archiver": "^7.0.1",
    "electron": "39.2.7",
    "electron-builder": "^26.5.0",
    "electron-notarize": "git://github.com/electron/notarize.git",
    "rimraf": "^5.0.5",
    "run-script-os-fix": "^1.0.4"
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "electron-is-dev": "^2.0.0",
    "electron-prompt": "^1.7.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-unhandled": "4.0.1",
    "minimalist": "^1.0.0",
    "minimist": "github:fortiZde/minimist",
    "undici": "^7.18.2",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "tar": "^7.5.6"
  }
}
